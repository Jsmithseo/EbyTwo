
<div class="velaMultiBanner {% if section.settings.noGutter %}mb60{% else %}mb30{% endif %}" style="background-color: {{section.settings.color_bg }};
                                     {% if section.settings.padding_block !=blank %}padding:{{section.settings.padding_block}}; {% endif %}">
    <div class="container{% if section.settings.full_with %}-full{% endif %}">
        <div class="velaMultiBannerInner gutter20">
            <div class="velaContent">
                {%- if section.blocks.size > 0 -%}
                    <div class="rowFlex rowFlexMargin {% if section.settings.noGutter %} noGutter{% endif %}">
                        {% for block in section.blocks %}
                            {%- if block.settings.size != blank -%}
                                {% assign bannersize = block.settings.size %}
                            {%- else -%}
                                {% assign bannersize = '570x300' %}
                            {%- endif -%}                          
                            <div class="{% if block.settings.class != blank %}{{ block.settings.class }}{% else %}col-xs-12{% endif %}">
                                <div class="{% if section.settings.noGutter %}velaBanner{% else %}mb30 velaBanner{% endif %} {{ section.settings.effect }}">                                       
                                    <a href="{%- if block.settings.link != blank -%}{{ block.settings.link }}{% else %}#{% endif %}" title="{{ block.settings.image.alt | default: shop.name }}">
                                        {%- if block.settings.image != blank -%}
                                            <img class="img-responsive border-radius1" alt="{{ block.settings.image.alt | default: shop.name }}" src="{{ block.settings.image | img_url: bannersize }}" />
                                        {%- else -%}
                                            <img class="img-responsive border-radius1" alt="{{ shop.name }}" src="//placehold.it/{{ bannersize }}" />
                                        {%- endif -%}
                                    </a>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {%- endif -%}
            </div>
        </div>
    </div>
</div>
{% schema %}
    {
        "name": "Vela Multiple Banner",
        "class": "velaFramework",
        "settings": [
            {
                "type": "header",
                "content": "Design Section"
            },
            {
                "type": "checkbox",
                "id": "full_with",
                "label": "Enabel Full Width?"
            },
            {
                "type": "checkbox",
                "id": "noGutter",
                "label": "No Padding",
                "default": false
            },
            {
                "type": "color",
                "id": "color_bg",
                "label": "Background Color",
                "default": "rgba(0,0,0,0)"
            },
            {
                "type": "text",
                "id": "padding_block",
                "label": "Padding",
                "placeholder": "0px 0px"
            },
            {
                "type": "header",
                "content": "General Settings"
            },
            {
                "type": "select",
                "id": "effect",
                "label": "Effect",
                "default": "effectOne",
                "options": [
                    {
                        "value": "effectNone",
                        "label": "None"
                    },
                    {
                        "value": "effectOne",
                        "label": "Effect one"
                    },
                    {
                        "value": "effectTwo",
                        "label": "Effect two"
                    },
                    {
                        "value": "effectThree",
                        "label": "Effect Three"
                    },
                    {
                        "value": "effectFour",
                        "label": "Effect Four"
                    },
                    {
                        "value": "effectFive",
                        "label": "Effect Five"
                    }
                ]
            }
        ],
        "blocks": [
            {
                "type": "item",
                "name": "Banner image",
                "settings": [
                    {
                        "type": "text",
                        "id": "class",
                        "label": "Class name",
                        "default": "col-xs-12 col-sm-3",
                        "info": "Grid class bootstrap"
                    },
                    {
                        "type": "image_picker",
                        "id": "image",
                        "label": "Banner image"
                    },
                    {
                        "type": "url",
                        "id": "link",
                        "label": "Image URL"
                    },
                    {
                        "type": "text",
                        "id": "size",
                        "label": "Banner size",
                        "info": "Default is blank. you can input size banner 200x400"
                    }
                ]
            }
        ],
		"presets": [
            {
                "name": "Multiple banner",
                "category": "4. Vela Image"
            }
        ]
    }
{% endschema %}