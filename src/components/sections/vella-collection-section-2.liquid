            "type":"text",
            "id":"collection_global",
            "label":"Button Label 1",
            "default":"Join Now"
        },
        {
            "type":"url",
            "id":"collection_global_link",
            "label":"Button Link"
        },
        {
          "type": "image_picker",
          "id": "collection_global_image",
          "label": "Image"
        }
	]
  }
