<div class="velaBannerMasonry mb30" style="background-color: {{section.settings.color_bg }};
                                     {% if section.settings.padding_block !=blank %}padding:{{section.settings.padding_block}}; {% endif %}">
    <div class="container{% if section.settings.full_with %}-full{% endif %}">
        <div class="velaBannerMasonryInner">
            <div class="headingGroup pb20">
                {%- if section.settings.title != blank -%}
                    <h3 class="velaHomeTitle text-center">
                        {{ section.settings.title }}
                    </h3>
                {%- endif -%}
                {%- if section.settings.subtitle != blank -%}
                    <span class="subTitle">{{ section.settings.subtitle }}</span>
                {%- endif -%}
            </div>
            <div class="velaContent gridMasonry rowFlexMargin">
                <div class="velaContentInner">
                    <div class="rowFlex">
                        <div class="grid-sizer"></div>
                        {% for block in section.blocks %}  
                            <div class="grid-item col-sp-12 {% if block.settings.class != blank %}{{ block.settings.class }}{% else %}col-xs-12{% endif %} {% if block.settings.position %}bannerRight{% endif %}">
                                <div class="mb30 pb-md-30 velaBanner">                                       
                                    <a href="{%- if block.settings.link != blank -%}{{ block.settings.link }}{% else %}#{% endif %}" title="{{ block.settings.image.alt | default: shop.name }}">
                                        {%- if block.settings.image != blank -%}
                                            <img class="img-responsive" alt="{{ block.settings.image.alt | default: shop.name }}" src="{{ block.settings.image | img_url: 'master' }}" />
                                        {%- else -%}
                                            <img class="img-responsive" alt="{{ shop.name }}" src="//placehold.it/440x600.jpg" />
                                        {%- endif -%}
                                    </a>
                                    {%- if block.settings.title != blank -%}
                                        <h4 class="title"><a href="{%- if block.settings.link != blank -%}{{ block.settings.link }}{% else %}#{% endif %}" title="{{ block.settings.image.alt | default: shop.name }}">{{ block.settings.title }}</a></h4>
                                    {%- endif -%}
                                    {%- if block.settings.text_button != blank -%}
                                        <a class="btn" href="{%- if block.settings.link != blank -%}{{ block.settings.link }}{% else %}#{% endif %}" title="{{ block.settings.text_button }}"> {{ block.settings.text_button }}</a>
                                    {%- endif -%}
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% schema %}
    {
        "name": "Banner Masonry",
        "class": "velaFramework",
        "settings":[
            {
                "type": "header",
                "content": "Design Section"
            },
            {
                "type": "checkbox",
                "id": "full_with",
                "label": "Enabel Full Width?"
            },
            {
                "type": "color",
                "id": "color_bg",
                "label": "Background Color",
                "default": "rgba(0,0,0,0)"
            },
            {
                "type": "text",
                "id": "padding_block",
                "label": "Padding",
                "placeholder": "0px 0px"
            },
            {
                "type": "header",
                "content": "General Settings Block Deal"
            },
            {
                "type": "text",
                "id": "title",
                "label": "Title",
                "placeholder": "Title"
            },
            {
                "type": "text",
                "id": "subtitle",
                "label": "SubTitle",
                "placeholder": "SubTitle"
            }
        ],
        "blocks": [
            {
                "type": "item",
                "name": "Banner image",
                "settings": [
                    {
                        "type": "text",
                        "id": "class",
                        "label": "Class name",
                        "default": "col-xs-6 col-sm-6",
                        "info": "Grid class bootstrap"
                    },
                    {
                        "type": "checkbox",
                        "id": "position",
                        "label": "Banner Right ?"
                    },
                    {
                        "type": "image_picker",
                        "id": "image",
                        "label": "Banner image"
                    },
                    {
                        "type": "text",
                        "id": "title",
                        "label": "Title"
                    },
                    {
                        "type": "url",
                        "id": "link",
                        "label": "Image URL"
                    },
                    {
                        "type": "text",
                        "id": "text_button",
                        "label": "Text Button"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "Banner Masonry",
                "category": "5. Vela Text"
            }
        ]
    }
{% endschema %}