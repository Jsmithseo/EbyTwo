<script>
  jQuery(document).on('click', '.siz_guid', function(){
    if(jQuery('.pop_size').is(':visible'))
    {
      jQuery('.pop_size').fadeOut()
    }
    else{
      jQuery('.pop_size').fadeIn()
    }
    return false;
  });
  jQuery('.pop_wrapper_backing').click(function(){
    jQuery('.pop_size').fadeOut();
  });
  jQuery('span.colz_pop').click(function(){
    jQuery('.pop_size').fadeOut();
  });
</script>